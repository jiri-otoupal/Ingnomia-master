		<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="NewGamePage">
			<DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Collapsed}"/>
		</ObjectAnimationUsingKeyFrames>
		<BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.IsEnabled)" Storyboard.TargetName="NewGamePage">
			<DiscreteBooleanKeyFrame KeyTime="0" Value="False"/>
		</BooleanAnimationUsingKeyFrames>
	</Storyboard>
	
